[alias]
	co = checkout
	br = branch
	st = status
	reb = rebase
	ff = pull --ff-only
	fix = commit --amend
	lg = log --decorate --graph --name-status
	ctags = ! .git/hooks/ctags
	fmt = ! git diff -U0 --no-color HEAD^ | ~/src/llvm-project-master/clang/tools/clang-format/clang-format-diff.py -i -p1
[merge]
	conflictstyle = diff3
	tool = vimdiff
[push]
	default = simple
[color]
	ui = auto
[log]
	decorate = true
	date = local
[diff]
	tool = vimdiff
	algorithm = patience
	context = 5
